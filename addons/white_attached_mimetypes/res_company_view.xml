<?xml version="1.0" encoding="UTF-8"?>
<openerp>
	<data>
		<!-- res.company form view -->
		<record model="ir.ui.view" id="view_company_inherit_base_attachment_size_form">
			<field name="name">res.company.form.inherit</field>
			<field name="inherit_id" ref="base.view_company_form" />
			<field name="model">res.company</field>
			<field name="arch" type="xml">
				<xpath expr="//page[@string='Configuration']" position="inside">
					<separator string="Attachments" />
					<group>
						<field name="attachment_size" /> MB
					</group>
				</xpath>
			</field>
		</record>

	</data>
</openerp>
